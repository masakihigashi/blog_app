<%= form_for(@post) do |f| %>
  <%= f.label :image %>
  <%= f.text_field :image, class: 'form-control' %>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>

  <%= f.label :text %>
  <%= f.text_field :text, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>